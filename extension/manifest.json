{
    "manifest_version": 3,
    "name": "InstaDown - Instagram Downloader",
    "version": "2.0.0",
    "description": "Download photos and videos from Instagram posts and reels.",
    "author": "ArisaAkiyama",
    "action": {
        "default_popup": "popup/popup.html",
        "default_title": "InstaDown",
        "default_icon": "icons/icon.png"
    },
    "icons": {
        "16": "icons/icon.png",
        "48": "icons/icon.png",
        "128": "icons/icon.png"
    },
    "permissions": [
        "activeTab",
        "storage"
    ],
    "host_permissions": [
        "http://localhost:3000/*",
        "https://www.instagram.com/*",
        "https://instagram.com/*"
    ]
}