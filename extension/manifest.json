{
    "manifest_version": 3,
    "name": "InstaDown - Instagram Downloader",
    "version": "2.3.0",
    "description": "Download photos and videos from Instagram posts, reels, stories, and private accounts.",
    "author": "ArisaAkiyama",
    "action": {
        "default_popup": "popup/popup.html",
        "default_title": "InstaDown",
        "default_icon": "icons/icon.png"
    },
    "icons": {
        "16": "icons/icon.png",
        "48": "icons/icon.png",
        "128": "icons/icon.png"
    },
    "permissions": [
        "activeTab",
        "storage",
        "scripting",
        "clipboardRead",
        "cookies"
    ],
    "host_permissions": [
        "http://localhost:3000/*",
        "https://www.instagram.com/*",
        "https://instagram.com/*",
        "https://*.fbcdn.net/*",
        "https://*.cdninstagram.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.instagram.com/stories/*"
            ],
            "js": [
                "content/story-capture.js"
            ],
            "run_at": "document_idle"
        }
    ]
}